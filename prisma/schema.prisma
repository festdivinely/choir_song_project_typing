generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Song {
  id        String    @id @default(cuid())
  title     String
  key       String
  createdAt DateTime  @default(now())
  sections  Section[]
}

model Section {
  id     String @id @default(cuid())
  type   String
  label  String
  lyrics String
  songId String
  song   Song   @relation(fields: [songId], references: [id], onDelete: Cascade)
}

model Opinion {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  message   String
  createdAt DateTime @default(now())
}
